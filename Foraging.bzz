}

function step() {
	#debug.print(Count, ":", State)

	if(State == 'H'){
		stateHome()
	} else if(State == 'S'){
		stateSearch()
		checkFood()
		if(CanBeacon == 0)
			checkBeacon()
		
	} else if(State == 'R'){
		if(usePath==1){
			foodandrange = v.get(id)
			foodandrange["range"] = count
			v.put(id,foodandrange)
		}
		stateReturn()
	} else if(State == "T"){
		rotateTheta()
	}
	


#__________________________________#
#states for counting, 0 is no count, 1 is positive count, -1 is negitive count
	if(CountState == 1){
		Count = Count + 1
	}
	if(CountState == -1){
		Count = Count - 1
	}
