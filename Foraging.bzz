function stateHome(){

	if(math.rng.uniform(10001)>9950){
		set_wheels(0.0,0.0)
		State = 'S'
		CountState = 1
		if(usePath == 0){
			path = {}
			CanBeacon = 0
		}
	}
}
function record(lf, rw, bcn){
	if(CountState == 1 and usePath == 0){
		temp = {}
		temp["lf"] = lf
		temp["rw"] = rw
		temp["bcn"] = bcn
		path[Count] = temp
	
		}

}

#move the specified way in the specified direction
function setWheelsCount(){
	set_wheels(CountState*path[Count]["lf"],CountState*path[Count]["rw"])
}
function stateSearch(){
	if(Count < CountMax){
		record(10.0,10.0, 0)
		setWheelsCount()
	}
	else{
		CountState = -1
		State = 'R'
	}
}

function stateReturn(){
	if(Count > 0){
		setWheelsCount()
	}
	else{
		State = 'H'
		CountState = 0
		foodandrange = v.get(id)
		foodandrange["food"] = 0
		foodandrange["range"] = count
